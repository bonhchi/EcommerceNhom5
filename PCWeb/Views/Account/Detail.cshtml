@model PCWeb.Models.Account.UserInfo
@{
    ViewData["Title"] = "Detail";
}
<br />
<h3 class="text-center">Thông tin khách hàng</h3>
<br />
<div class="row">
    <table class="table">
        <tr>
            <th>Tên</th>
            <td>
                @(Model.FirstName + " " + @Model.LastName)
            </td>
        </tr>
        <tr>
            <th>Email</th>
            <td>
                @Model.Email
            </td>
        </tr>
        <tr>
            <th>Địa chỉ</th>
            <td>
                @Model.Address
            </td>
        </tr>
        <tr>
            <th>Ngày sinh</th>
            <td>
                @Model.DayOfBirth.ToString("dd/MM/yyyy")
            </td>
        </tr>
        <tr>
            <th>Số điện thoại</th>
            <td>
                @Model.PhoneNumber
            </td>
        </tr>
        <tr>
            <th>Giới tính</th>
            <td>
                @Model.Gender
            </td>
        </tr>
    </table>
    <div class="row col-md-12">
        <div class="col-md-6">
            <a class="btn btn-primary float-md-right" asp-area="" asp-action="Edit" asp-controller="Account" asp-route-id="@ViewBag.Id">Thay đổi thông tin</a>
        </div>
        <div class="col-md-6">
            <a class="btn btn-primary" asp-area="" asp-action="ChangePassword" asp-controller="Account" asp-route-id="@ViewBag.Id">Thay đổi mật khẩu</a>
        </div>
    </div>
</div>


